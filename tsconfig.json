{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "/",
    "outDir": "./lib",
    "types": ["node"]
  },
  "include": ["./src/"],
  "exclude": ["./src/scheduler/", "./src/task-creator/"]
}
